<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#000000"
        app:itemIconSize="24dp"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="#FFFFFF"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_navigation_bar" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="405dp"
        android:layout_height="671dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/aclonica"
            android:text="          BROWSE CATEGORIIES"
            android:textColor="#000000"
            android:textSize="24sp"></TextView>

        <ImageView
            android:id="@+id/books"
            android:layout_width="179dp"
            android:layout_height="162dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/books" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/aclonica"
            android:text="BOOKS"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="30sp">

        </TextView>

        <ImageView
            android:id="@+id/cars"
            android:layout_width="179dp"
            android:layout_height="162dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="190dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/cars" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/aclonica"
            android:text="CARS"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="30sp">

        </TextView>

        <ImageView
            android:id="@+id/furnitures"
            android:layout_width="179dp"
            android:layout_height="162dp"
            android:layout_marginTop="350dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/furniture" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/aclonica"
            android:text="FURNITURES"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="30sp">

        </TextView>

        <ImageView
            android:id="@+id/phones"
            android:layout_width="179dp"
            android:layout_height="162dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="500dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/phones" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="580dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/aclonica"
            android:text="PHONES"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="30sp">

        </TextView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>